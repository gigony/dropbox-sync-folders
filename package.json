{
  "name": "dropbox-sync-folders",
  "version": "0.1.6",
  "description": "Library to sync folders from Dropbox",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "jest": {
    "verbose": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gigony/dropbox-sync-folders.git"
  },
  "keywords": [
    "dropbox",
    "sync"
  ],
  "author": "Gigon Bae",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gigony/dropbox-sync-folders/issues"
  },
  "homepage": "https://github.com/gigony/dropbox-sync-folders#readme",
  "dependencies": {
    "dropbox": "^4.0.28",
    "fast-glob": "^3.0.4",
    "fs-extra": "^8.1.0",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@types/dotenv-flow": "^3.0.0",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.2",
    "@types/node-fetch": "^2.3.7",
    "dotenv-flow": "^3.0.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "directories": {
    "lib": "lib"
  }
}
